
<div class="container-fluid">
    <div class="row">
        <a id="btnBackToDashboard" href="@Url.ActionLink("Index", "Home")" class="btn btn-link btn-md btn-success text-white">Back to Dashboard</a>
    </div>
    <div class="row">
        <div class="mx-auto">
            <div class="w-75">
                <div class="table-responsive table-sm" id="table_cart">
                    <table class="table text-xs">
                        <thead>
                            <tr>
                                <th colspan="2">Product</th>
                                <th>Quantity</th>
                                <th>Price</th>
                                <th colspan="2">Sum</th>
                            </tr>
                        </thead>
                        <tbody id="tbodyOrderItemList">
                            
                        </tbody>
                        <tfoot>
                            <tr>
                                <th colspan="4">Total</th>
                                <th colspan="2"><span id="spanCartTotalAmount"></span></th>
                            </tr>
                            <tr>
                                <th colspan="6">
                                    <button type="button" class="btn btn-success btn-block btn-xs" id="btnCartCheckout">Checkout</button>
                                </th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts
{
    <script src="~/js/application/Cart.js"></script>
}