@{ 
    Layout = "~/Views/Shared/_NoMenuLayout.cshtml";
}

@model WebApp.Models.Error.StatusPageViewModel
<div class="row justify-content-lg-center p-2">
    <div class="col-lg-5">
        <div class="row">
            <div class="col-12 d-flex justify-content-center">
                <h3>@Model.Title</h3>
            </div>
            <div class="col-12 d-flex justify-content-center">
                <img src="@Url.Content(Model.ImagePath)" class="img-fluid" alt="Status Page" />
            </div>
            @if(!string.IsNullOrEmpty(Model.SubTitle))
            {
                 <div class="col-12 d-flex justify-content-center">
                    <h4>@Model.SubTitle</h4>
                </div>
            }
            @if (!string.IsNullOrEmpty(Model.Message))
            {
                <div class="col-12 d-flex justify-content-center">
                    <span class="text-danger">
                        @Model.Message
                    </span>
                </div>
            }
            <div class="col-12 d-flex justify-content-center">
                <a class="action" href="/">
                    <span class="action-text">
                        <em class="fa fa-home"></em> Go to homepage
                    </span>
                </a>
            </div>
        </div>
    </div>
</div>

