@model WebApp.Models.Order.OrderSearchViewModel
@using Common.Constants
@using Common.DataTransferObjects.CollectionPaging

<div id="orders_wrapper" class="mx-auto">
    <div class="row">
        <div class="mt-2">
            @if (Model == null || !Model.OrderSearchResults.Any())
            {
                <h2>No Data Available</h2>
            }
            else
            {
                @foreach (var item in Model.OrderSearchResults)
                {
                    @*<div class="callout callout-info">
                        <h5><i class="fas fa-info"></i> Note:</h5>
                        This page has been enhanced for printing. Click the print button at the bottom of the invoice to test.
                    </div>*@
                    <button type="button" class="btn btn-outline-success btn-xs text-left mt-2 ml-2 text-bold btn_order_items" 
                    data-product-id="@item.ProductId" data-product-name="@item.ProductName" data-product-price="@item.ProductPrice">
                        <span class="text-xs">@item.ProductName</span> <br>
                        <span class="text-xs">₱@item.ProductPrice x <span id="item_@{ @item.ProductId }_quantity">@item.Quantity</span></span>
                    </button>
                }
            }
        </div>
    </div>
    @if (Model != null && Model.OrderSearchResults.Any())
    {
        <div class="row mt-2">
            <div class="mx-auto">
                @{
                    await Html.RenderPartialAsync("_Paging", new PagingMetadata(Model.OrderSearchResults.CurrentPage, Model.OrderSearchResults.TotalPages, Model.OrderSearchResults.PageSize, Model.OrderSearchResults.TotalCount, Model.OrderSearchResults.PageClickEvent));
                }
            </div>
        </div>
    }
</div>


