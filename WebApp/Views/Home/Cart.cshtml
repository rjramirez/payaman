@model WebApp.Models.Cart.CartVM


@if (Model != null && Model.OrderItemList.Any())
{

    <div class="container-fluid">
        <div class="row">
            <button id="btnBackToDashboard" href="@Url.Action("Index", "Home")" class="btn btn-md btn-success">Back to Dashboard</button>
        </div>
        <div class="row">
            <div class="mx-auto">
                <div class="w-75">
                    <div class="table-responsive" id="table_cart">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th colspan="2">Product</th>
                                    <th>Quantity</th>
                                    <th>Price</th>
                                    <th colspan="2">Sum</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.OrderItemList)
                                {
                                    <tr>
                                        <td colspan="2">
                                            <p>@item.ProductName</p>
                                        </td>
                                        <td>
                                            <input type="number" value="@item.Quantity" class="form-control">
                                        </td>
                                        <td>₱@item.ProductPrice</td>
                                        <td>₱@item.TotalAmount</td>
                                        <td>
                                            <a href="#"><i class="fa-solid fa-trash" style="color: #9e9e9e;"></i></a>
                                        </td>
                                    </tr>
                                }

                            </tbody>
                            <tfoot>
                                <tr>
                                    <th colspan="4">Total</th>
                                    <th colspan="2">₱@Model.TotalAmount</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
}


