@model WebApp.Models.Receipt.ReceiptVM;

<div class="container-fluid">
    <div class="row">
        <a id="btnBackToDashboard" href="@Url.ActionLink("Index", "Home")" class="btn btn-link btn-md btn-success text-white">Back to Dashboard</a>
    </div>
    <div class="row">
        <div class="mx-auto">
            <div class="col-md-12" id="divToPrint">
                <div class="row justify-content-center"><span class="h5">@Model.StoreName</span></div>
                <div class="row"><span class="font-italic" id="spanStoreAddress">@Model.StoreAddress</span></div>
                <div class="row">
                    <span class="text-sm">Order ID: <span class="text-bold" id="spanOrderId">@Model.OrderId</span></span>
                </div>
                <div class="row">
                    <span class="text-sm">Cashier: <span class="text-bold" id="spanCashierName">@Model.CashierName</span></span>
                </div>
                <div class="row">
                    <span class="text-sm">Date: <span class="text-bold">@DateTime.Now.ToString("MMMM dd, yyyy H:m")</span></span>
                </div>
                <div class="row table-responsive mt-1">
                    <table class="table table-sm">
                        <thead>
                            <tr>
                                <th>Qty</th>
                                <th>Description</th>
                                <th>Price</th>
                            </tr>
                        </thead>
                        <tbody id="tbodyOrderItemList">
                            @foreach(var orderItem in Model.OrderItemList)
                            {
                                <tr>
                                    <td>@orderItem.Quantity</td>
                                    <td>@orderItem.ProductName</td>
                                    <td>₱@orderItem.ProductPrice</td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <td colspan="2">Total Amount:</td>
                                <td id="tdTotalAmount"><span class="text-bold">₱@Model.TotalAmount</span></td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
            <button type="button" id="btnPrintReceipt" class="btn btn-block btn-success">Print</button>
        </div>
    </div>
</div>

@section Scripts
{
    <script src="~/js/application/Receipt.js"></script>
}