<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>
        @{
            string pageTitle = "";
            if (string.IsNullOrEmpty(ViewData["Title"]?.ToString()))
            {
                pageTitle = "RITS";
            }
            else
            {
                pageTitle = ViewData["Title"]?.ToString() + " - RITS";
            }
        }
        @pageTitle
    </title>
    @{
        await Html.RenderPartialAsync("_LayoutHead");
    }
    @RenderSection("Styles", false)
</head>
<body class="hold-transition sidebar-collapse layout-top-nav text-sm">
    <div class="wrapper">

        <!-- Preloader -->
        <div id="divPreloader" class="preloader flex-column justify-content-center align-items-center">
            <img class="animation__shake" src="~/img/AppLogo.png" alt="App Logo" height="150" width="150">
        </div>

        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            <!-- Left navbar links -->
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link sidebar-toggle-btn" data-widget="pushmenu" data-enable-remember="true" href="#" role="button"><em class="fas fa-bars"></em></a>
                </li>
            </ul>
            <div class="mx-auto">
                <!-- SEARCH FORM -->
                <form class="form-inline ml-0 ml-md-3">
                    <div class="input-group input-group-sm">
                        <input class="form-control form-control-navbar" type="search" placeholder="Search" id="input_search_bar" aria-label="Search">
                        <span class="input-group-text form-control-navbar"><i class="fas fa-search"></i></span>
                    </div>
                </form>
            </div>
            

            <!-- Right navbar links -->
            @{
                await Html.RenderPartialAsync("_LayoutRightNavBarLink");
            }

        </nav>
        <!-- /.navbar -->
        <!-- Main Sidebar Container -->
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <!-- Brand Logo -->
            <a href="#" class="brand-link">
                <img src="~/img/AppLogo.png" alt="App Logo" class="brand-image img-circle elevation-3" style="opacity: .8">
                <span class="brand-text font-weight-light">RITS POS</span>
            </a>

            <!-- Sidebar -->
            <div class="sidebar">
                <!-- Sidebar user (optional) -->
                <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                    <div class="image">
                        <img src="~/img/AppLogo.png" class="img-circle elevation-2" alt="User Image">
                    </div>
                    <div class="info">
                        <a href="#" class="d-block">@User.FindFirst("name")?.Value</a>
                    </div>
                </div>

                <!-- Sidebar Menu -->
                @{
                    await Html.RenderPartialAsync("~/Views/Menu/_MainMenu.cshtml");
                }
                <!-- /.sidebar-menu -->
            </div>
            <!-- /.sidebar -->
        </aside>

        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <!-- Main content -->
            <section class="content">
                <div class="container-fluid">
                    @if (!string.IsNullOrEmpty(ViewData["Title"]?.ToString()))
                    {
                        <div class="row mb-2">
                            <div class="col-sm-6">
                                <h1 class="display-4 text-xl">@ViewData["Title"]</h1>
                            </div><!-- /.col -->
                        </div><!-- /.row -->
                    }
                    @RenderBody()
                </div><!-- /.container-fluid -->
            </section>
            <!-- /.content -->
        </div>

        <!-- /.content-wrapper -->
        @{
            await Html.RenderPartialAsync("_LayoutFooter");
        }

        <!-- Control Sidebar -->
        <aside class="control-sidebar control-sidebar-dark" aria-labelledby="Side Bar">
            <!-- Control sidebar content goes here -->
        </aside>
        <!-- /.control-sidebar -->
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
@*    <script>
        $.widget.bridge('uibutton', $.ui.button)
    </script>*@
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/select2/js/select2.full.min.js"></script>
    <script src="~/lib/moment/moment.min.js"></script>
    <script src="~/lib/daterangepicker/daterangepicker.min.js"></script>
    @*<script src="~/lib/bootstrap4-datetimepicker/js/bootstrap-datetimepicker.min.js"></script>*@
    <script src="~/lib/overlayScrollbars/js/jquery.overlayScrollbars.min.js"></script>
    <script src="~/lib/toastr/toastr.min.js"></script>
    <script src="~/lib/adminlte/js/adminlte.min.js"></script>
    <script src="~/js/site.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
