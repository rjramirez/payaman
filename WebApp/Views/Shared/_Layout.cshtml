<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>
        @{
            string pageTitle = "";
            if (string.IsNullOrEmpty(ViewData["Title"]?.ToString()))
            {
                pageTitle = "RITS";
            }
            else
            {
                pageTitle = ViewData["Title"]?.ToString() + " - RITS";
            }
        }
        @pageTitle
    </title>
    @{
        await Html.RenderPartialAsync("_LayoutHead");
    }
</head>
<body class="hold-transition sidebar-mini layout-fixed text-sm">
    <div class="wrapper">

        <!-- Preloader -->
        <div id="divPreloader" class="preloader flex-column justify-content-center align-items-center">
            <img class="animation__shake" src="~/img/AppLogo.png" alt="App Logo" height="150" width="150">
        </div>

        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            <!-- Left navbar links -->
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#" role="button" data-enable-remember="true"><em class="fas fa-bars"></em></a>
                </li>
            </ul>

            <!-- Right navbar links -->
            @{
                await Html.RenderPartialAsync("_LayoutRightNavBarLink");
            }

        </nav>
        <!-- /.navbar -->
        <!-- Main Sidebar Container -->
        <aside class="main-sidebar sidebar-dark-primary elevation-4" aria-labelledby="Main Sidebar">
            <!-- Brand Logo -->
            <a href="/" class="brand-link">
                <img src="~/img/AppLogo.png" alt="Logo" class="brand-image img-circle elevation-3">
                <span class="brand-text font-weight-light text-md text-white">RITS POS</span>
            </a>

            <!-- Sidebar -->
            <div class="sidebar">
                <!-- Sidebar Menu -->
                @{
                    await Html.RenderPartialAsync("~/Views/Menu/_MainMenu.cshtml");
                }
                <!-- /.sidebar-menu -->
            </div>
            <!-- /.sidebar -->
        </aside>

        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <!-- Main content -->
            <section class="content">
                <div class="container-fluid">
                    @if (!string.IsNullOrEmpty(ViewData["Title"]?.ToString()))
                    {
                        <div class="row mb-2">
                            <div class="col-sm-6">
                                <h1 class="display-4 text-xl">@ViewData["Title"]</h1>
                            </div><!-- /.col -->
                        </div><!-- /.row -->
                    }
                    @RenderBody()
                </div><!-- /.container-fluid -->
            </section>
            <!-- /.content -->
        </div>

        <!-- /.content-wrapper -->
        @{
            await Html.RenderPartialAsync("_LayoutFooter");
        }

        <!-- Control Sidebar -->
        <aside class="control-sidebar control-sidebar-dark" aria-labelledby="Side Bar">
            <!-- Control sidebar content goes here -->
        </aside>
        <!-- /.control-sidebar -->
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script>
        $.widget.bridge('uibutton', $.ui.button)
    </script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/select2/js/select2.full.min.js"></script>
    <script src="~/lib/moment/moment.min.js"></script>
    <script src="~/lib/daterangepicker/daterangepicker.min.js"></script>
    <script src="~/lib/bootstrap4-datetimepicker/js/bootstrap-datetimepicker.min.js"></script>
    <script src="~/lib/overlayScrollbars/js/jquery.overlayScrollbars.min.js"></script>
    <script src="~/lib/toastr/toastr.min.js"></script>
    <script src="~/lib/adminlte/js/adminlte.min.js"></script>
    <script src="~/js/site.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
