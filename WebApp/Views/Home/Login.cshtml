@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>HRSuite</title>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/lib/fontawesome-free/css/all.min.css" rel="stylesheet" />
    <link href="~/lib/bootstrap4-datetimepicker/css/bootstrap-datetimepicker.min.css" rel="stylesheet" />
    <link href="~/lib/icheck-bootstrap/icheck-bootstrap.min.css" rel="stylesheet" />
    <link href="~/lib/toastr/toastr.min.css" rel="stylesheet" />
    <link href="~/lib/adminlte/css/adminlte.min.css" rel="stylesheet" />
    <link href="~/lib/overlayScrollbars/css/OverlayScrollbars.min.css" rel="stylesheet" />
    <link href="~/lib/daterangepicker/daterangepicker.min.css" rel="stylesheet" />
    <link href="~/lib/select2/css/select2.min.css" rel="stylesheet" />
    <link href="~/lib/select2-bootstrap4-theme/select2-bootstrap4.min.css" rel="stylesheet" />
    <link href="~/lib/chartjs/css/Chart.min.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />

    <style>
        .bg_brand {
            background-color: #5959EB;
        }
    </style>
</head>
<body>
    <section class="vh-100 bg-primary">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col col-xl-12">
                    <div class="card" style="border-radius: 1rem;">
                        <div class="row g-0">                            
                            <div class="col-md-3 col-lg-4 d-flex align-items-center">
                                <div class="card-body p-4 p-lg-5 text-black">
                                    <div class="text-left mb-4">
                                        <h4 class="text-blue text-bold">&nbsp; Payaman POS</h4>
                                    </div>
                                    <p class="text-black text-bold">Log In</p>
                                    <form method="post" asp-controller="Home" asp-action="Index" id="loginForm">
                                        <div class="input-group mb-3">
                                            <input type="email" class="form-control" placeholder="Email">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                                            </div>
                                        </div>
                                        <div class="input-group mb-3">
                                            <input type="password" class="form-control" placeholder="Password">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text"><i class="fas fa-lock"></i></span>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-8" style="display:block">
                                                <input type="checkbox" id="exampleCheck2">
                                                <label class="text-black text-bold">Remember me</label>                                               
                                            </div>
                                            <div class="col-4">
                                                <a type="button" href="@Url.ActionLink("AuthenticationCallback","Home")" class="btn btn-primary" style="float: right;">
                                                    Log In
                                                </a>
                                            </div>
                                        </div>
                                    </form>
                                    <hr class="bg_brand" />
                                    <p class="mb-1"><a hrf="#" class="link-info text-black">How do i log in ?</a></p>
                                    <p class="mb-0"><a hrf="#" class="link-info text-black">Forget Password?</a></p>
                                    <div></div>
                                    <!-- end card -->
                                </div>
                            </div>
                            <div class="col-md-7 col-lg-8 d-none d-md-block">
                                @*<img src="~/img/LoginPage.png"
                                     alt="login form" class="img-fluid" style="border-radius: 0 1rem 1rem 0;" />*@
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>
</html>