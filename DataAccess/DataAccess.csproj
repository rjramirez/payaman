    <EmbeddedResource Remove="Repositories\PayamanDB\**" />
    <None Remove="Authorization\**" />
    <None Remove="Repositories\PayamanDB\**" />
  </ItemGroup>

  <ItemGroup>
    <Compile Remove="Helpers\AutoMapperProfile.cs" />
    <Compile Remove="Helpers\DataContext.cs" />
    <Compile Remove="Helpers\ErrorHandlerMiddleware.cs" />
    <Compile Remove="Helpers\SqliteDataContext.cs" />
    <Compile Remove="Services\Interfaces\IUserService.cs" />
    <Compile Remove="Services\UserService.cs" />
  </ItemGroup>

  <ItemGroup>
    <Compile Include="..\AssemblyInfo.cs" Link="AssemblyInfo.cs" />
    <Compile Include="Repositories\PayamanDB\AuditTrailRepository.cs" />
    <Compile Include="Repositories\PayamanDB\ErrorLogRepository.cs" />
