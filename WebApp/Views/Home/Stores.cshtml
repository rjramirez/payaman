@section Styles
{
    <link href="~/lib/datatables/css/datatables.min.css" rel="stylesheet" />
}

<div class="row">
    <div class="col-md-5 mx-auto mt-2">
        <table id="stores_table" class="display compact stripe mt-3" style="width:100%">
            <thead>
                <tr>
                    <th></th>
                    <th>Name</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tfoot>
                <tr>
                    <th></th>
                    <th>Name</th>
                    <th>Actions</th>
                </tr>
            </tfoot>
        </table>
    </div>
</div>



<!-- Add Store Modal -->
<div class="modal fade" id="addStoreModal" data-backdrop="static" data-keyboard="false" tabindex="-1" aria-labelledby="addStoreModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <div class="input-group input-group-sm">
                            <div class="input-group-prepend">
                                <div class="input-group-text">Name</div>
                            </div>
                            <input type="text" class="form-control form-control-sm" id="input_add_storename">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="text_add_storeaddress" class="text-muted">Address</label>
                        <textarea class="form-control" id="text_add_storeaddress" rows="3"></textarea>
                    </div>
                </form>
                <div class="text-right">
                    <button type="button" class="btn btn-secondary btn-xs btn-block" data-dismiss="modal">Close</button>
                    <button type="button" id="btnStoreAdd" class="btn btn-primary btn-xs btn-block">Save</button>
                </div>
            </div>
        </div>
    </div>
</div>



<!-- Edit Store Modal -->
<div class="modal fade" id="editStoreModal" data-backdrop="static" data-keyboard="false" tabindex="-1" aria-labelledby="editStoreModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <div class="input-group input-group-sm">
                            <div class="input-group-prepend">
                                <div class="input-group-text">Name</div>
                            </div>
                            <input type="text" class="form-control form-control-sm" id="input_edit_storename">
                            <input type="hidden" id="input_edit_storeid">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="input_edit_storeaddress" class="text-muted">Address</label>
                        <textarea class="form-control" id="input_edit_storeaddress" rows="3"></textarea>
                    </div>
                </form>
                <div class="text-right">
                    <button type="button" class="btn btn-secondary btn-xs btn-block" data-dismiss="modal">Close</button>
                    <button type="button" id="btnStoreUpdate" class="btn btn-primary btn-xs btn-block">Update</button>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    <script src="~/lib/datatables/js/datatables.min.js"></script>
    <script src="~/js/application/Store.js"></script>
}